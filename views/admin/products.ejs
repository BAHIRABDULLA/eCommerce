  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script>


    function confirmDelete(productId) {
      event.preventDefault();
      Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!"
      }).then((result) => {
        if (result.isConfirmed) {
          window.location.href = `/admin/deleteProduct/${productId}`
          Swal.fire({
            title: "Deleted!",
            text: "Your file has been deleted.",
            icon: "success"
          });
        }
      });
    }





    function toggleProductStatus(productId, index) {
      const button = document.getElementById(`toggleProduct${index}`)
      fetch(`/admin/product/${productId}/updateStatus`, {
        method: 'POST',
        headers: {
          'content-type': 'application/json'
        }
      })
        .then(response => response.json())
        .then(data => {
          if (data.status) {
            button.innerHTML = 'Listed'
          } else {
            button.innerHTML = 'Unlisted'
          }
        }).catch(error => {
          console.log(error.message);
        })
    }





  </script>

