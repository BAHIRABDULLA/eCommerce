      <!-- partial -->
      <div class="main-panel">
        <a class="btn btn-info " href="/admin/orders">Back</a>
        <div class="content-wrapper">
          <div class="row">

            <div class="col-12 grid-margin">
              <div class="card">
                <div class="card-body">
                  <%= console.log(order); %>
                    <form class="form-sample">
                      <div class="start">

                        <h2 class="text-danger ">Order Details</h2>

                        <div class="row">
                          <div class="col-md-6">
                            <h4 class="bg-">Customer Address Details</h4>
                            <% if (address) { %>
                              <textarea class="form-control address-input" placeholder="Customer Address" disabled>
                                              <%= address.name %> &nbsp; <%=locals.address.phone %>  
                                              <%= address.streetAddress %> 
                                              Pincode: <%= address.pincode %>
                                              <%= address.city %> &nbsp; <%= address.state %> &nbsp; <%= address.landmark %> &nbsp; <%= address.phone2 %> 
                                              <%= address.email %>
                                          </textarea>
                              <% } else { %>
                                <p>No address found</p>
                                <% } %>
                          </div>
                          <div class="col-md-6">
                            <h4 class="bg">Payment Method</h4>
                            <input type="text" class="form-control " value="<%= order.paymentMethod %>" disabled>
                          </div>
                          
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                              <h3 class="text-danger ">Order Status</h3>

                              <select id="orderStatusSelect" class="form-control" onchange="updateOrderStatus('<%= order._id %>',this.value)">
                                <option <%=order.status==='Pending' ? 'selected' : '' %> value="Pending" >Pending</option>
                                <option <%=order.status==='Shipped' ? 'selected' : '' %> value="Shipped">Shipped</option>
                                <option <%=order.status==='Delivered' ? 'selected' : '' %> value="Delivered">Delivered</option>
                                <option <%=order.status==='Cancelled' ? 'selected' : '' %> value="Cancelled">Cancelled</option>
                                <option <%=order.status==='Returned' ? 'selected' : '' %> value="Returned">Returned</option>
                              </select>
                            </div>
                            <% if(order.status === 'Returned') { %>
                              <div class="col-md-6">
                                <h3 class="text-danger ">Return Reason</h3>
                                  <textarea class="form-control return-input" name="returnReason" id="returnReason" disabled ><%= order.returnReason %></textarea>
                              </div>
                            <% } %>
                        </div>

                        <div class="row">
                          <div class="col-md-6">
                            <h4 class="bg-">Date of Order</h4>
                            <input type="text" class="form-control" placeholder="2024-02-17"
                              value="<%= order.orderDate.toDateString() %>" disabled>
                          </div>
                          <div class="col-md-6">
                            <h4 class="bg-">Transaction ID</h4>
                            <input type="text" class="form-control" placeholder="Transaction ID" disabled>
                          </div>
                        </div>

                        <h2 class="text-danger ">Product Details</h2>
                        <div class="row">
                          <h4 class="col-md-3">Product Image</h4>
                          <h4 class="col-md-3">Product Name</h4>
                          <h4 class="col-md-3">Product Quantity</h4>
                          <h4 class="col-md-3">Product Price</h4>
                        </div>

                        <% products.forEach(product=> { %>
                          <div class="row">
                            <div class="col-md-3">
                              <img src="/uploads/<%= product.firstImage %>" alt="product image" class="img-fluid" style="width: 50px; height: 50px;">
                            </div>
                            <div class="col-md-3">
                              <input type="text" class="form-control" value="<%= product.name %>" disabled >
                            </div>
                            <div class="col-md-3">
                              <input type="text" class="form-control" value="<%= product.quantity %>" disabled >
                            </div>
                            <div class="col-md-3">
                              <input type="text" class="form-control" value="<%= product.totalPrice %>" disabled >
                            </div>
                          </div>
                          <% }) %>
                      </div>
                    </form>
                </div>
              </div>
            </div>



          </div>
        </div>
        <!-- content-wrapper ends -->
        <!-- partial:partials/_footer.html -->

        <!-- partial -->
      </div>
      <!-- main-panel ends -->
    </div>
    <!-- page-body-wrapper ends -->
  </div>
  <!-- container-scroller -->
  <script>

    const orderStatusSelect=document.getElementById('orderStatusSelect')
    if(orderStatusSelect.value==='Delivered'){
      console.log(orderStatusSelect,'order status select');
      orderStatusSelect.disabled=true
    }

    function updateOrderStatus(orderId,status){
     
      fetch(`/admin/updateOrderStatus/${orderId}`,{
        method:'POST',
        headers:{
          'Content-Type':'application/json'
        },
        body:JSON.stringify({status})
      })
      .then(response=>{
        console.log(response,'response in update order status function ')
        if(response.ok){
          console.log('Order status updated successfully');
          if(status==='Delivered'){
            console.log('aftern then ')
            orderStatusSelect.disabled=true
          }
        }else{
          console.error('Failed to update order status')
        }
      })
      .catch(error=>{
        console.error('Error updating order status',error);
      })
    }
  </script>
