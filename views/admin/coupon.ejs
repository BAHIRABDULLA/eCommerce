            <div class="col-lg-12 grid-margin stretch-card">
              <div class="card">
                <div class="card-body">
                  <% if(error&&error.length>0){ %>
                    <div id="alertError" class="alert alert-danger  ">
                      <% error.forEach((error)=>{ %>
                        <%= error %>
                        <% }) %>
                    </div>
                    <% } %>
                    <script>
                      setTimeout(() => {
                        var alertError=document.getElementById('alertError')
                        alertError.style.display='none'
                      }, 3000);
                    </script>
                  <div class="table-responsive">
                    <table class="table table-striped">
                      <thead>
                        <tr>
                          <th>
                            Sl no
                          </th>
                          <th>
                            Coupon Name
                          </th>
                          <th>
                            Coupon Code
                          </th>
                          <th>
                            Expire Date
                          </th>
                          <th>
                            Discount Amount
                          </th>
                          <th>
                            Active
                          </th>
                        </tr>
                      </thead>
                      <tbody>
                        <% coupons.forEach((coupon,index)=>{ %>
                        <tr>
                          <td class="py-1">
                            <%= index+1 %>
                          </td>
                          <td>
                            <%= coupon.name %>
                          </td>
                          <!-- <td><label class="badge badge-warning">In progress</label></td> -->
                          <td><%= coupon.code %></td>


                          <td>
                        
                           <%= coupon.expireDate.toLocaleDateString('en-US',{year:"numeric",month:'short',day:'2-digit'}) %>
                          </td>
                          <td>
                            â‚¹ <%= coupon.discountAmount %>
                          </td>
                          <td><Button class="btn btn-warning  "><%= coupon.active %></Button></td>
                          <td><a href="/admin/couponEdit/<%= coupon._id %>" class="btn btn-dark">Edit</a></td>

                          <td><a href="" class="btn btn-danger "  onclick="deleteCoupon('<%= coupon._id %>','<%= index %>')">Delete</a></td>
                        </tr>
                        <% }) %>
                        
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
