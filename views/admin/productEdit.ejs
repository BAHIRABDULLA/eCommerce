    <script>
      function validateForm(){
        let name=document.getElementById('name').value.trim()
        let brand=document.getElementById('brand').value.trim()
        let price=document.getElementById('price').value.trim()
        let quantity=document.getElementById('quantity').value.trim()
        let description= document.getElementById('exampleTextarea1').value.trim()
         
        if(name==''){
          document.getElementById('nameError').innerText='Please enter a name'
          return false
        }
        if(brand==''){
          document.getElementById('brandeError').innerText='Please enter brand'
          return false
        }
        if(price<1 || price==''){
          document.getElementById('priceError').innerText='Enter a positive price'
          return false
        }
        if(quantity<1||quantity==''){
          document.getElementById('quantityError').innerText='Enter a positive quantity'
          return false
        }
        if(description==''){
          document.getElementById('descriptionError').innerText='Please enter  description'
        }
        return  true
      }


