  <script>
    function generateCouponCode(){
      const characters='ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz0123456789';
      let couponCode='';
      for(let i =0;i<10;i++){
        couponCode+=characters.charAt(Math.floor(Math.random()*characters.length))
      }
      const couponCodeInput=document.getElementById('couponCodeInput')
      couponCodeInput.value=couponCode
      console.log(couponCode,'in ejs page');
    }


    document.addEventListener('DOMContentLoaded', function() {
    const couponExpire = document.getElementById('couponExpire');
    couponExpire.value = '<%= coupon.expireDate %>';
});

  function validateForm(){
    let name=document.getElementById('couponName').value.trim()
    let code=document.getElementById('couponCodeInput').value.trim()
    let description=document.getElementById('description').value.trim()
    let discount=document.getElementById('discount').value.trim()
    let expireDate=new Date(document.getElementById('couponExpire').value)
    

    if(name==''||!name){
      document.getElementById('nameError').innerText='Please enter valid coupon name'
      return false
    }
    if(description==''||!description){
      document.getElementById('descriptionError').innerText='Please enter description'
      return false
    }
    if(expireDate==''||!expireDate){
      document.getElementById('expireDateError').innerText='Please enter expire date'
      return false
    }
    const currentDate=new Date()
    console.log(expireDate,'expire date',currentDate,'current date');
    if(expireDate<currentDate){
      document.getElementById('expireDateError').innerText='Expire date cannot be previous dates'
      return false
    }
    return true
  }

  </script>

