<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <title>Forget Password</title>
  <style>
    .flash {
      
    }
    body {
      background: url('./users/assets/images/wallpapper2.webp') center center fixed;

      background-size: cover;
    }

    .signin-form {
      background-color: rgba(255, 255, 255, 0.8);
      padding: 20px;
      border-radius: 10px;
      margin-top: 100px;
    }

    .signin-heading {
      font-weight: bold;
      text-align: center;
      margin-bottom: 20px;
    }

    .signin-button {
      border-radius: 15px;
    }

    .forgot-password-link,
    .signup-link {
      text-align: center;
      margin-top: 15px;
    }
  </style>
</head>
<body>

  <div class="container text-center mt-4">
    <!-- Logo Space -->
    <img src="/users/assets/images/chiccart-high-resolution.png" alt="ChicCart Logo" width="110" height="25">
  </div>

 


  <div class="container">
    <% if (message) { %>
      <div class="flash  alert alert-danger" id="alertMessage">
          <%= message %>
      </div>
      <script>
        setTimeout(() => {
          let alertMessage=document.getElementById('alertMessage')
          alertMessage.style.display='none'
        }, 3000); 
      </script>
    <% } %>
    <div class="row justify-content-center">
      <div class="col-md-6">
        <form class="signin-form" action="/forgetPass" method="post">
          <h2 class="signin-heading">Forget Password</h2>

          <!-- Email Input -->
          <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" name="email" id="email" placeholder="Enter your email" required>
          </div>

          <!-- Check OTP Button -->
          <button type="submit" class="btn btn-warning btn-block signin-button">Check OTP</button>
          <a href="/signIn">Back</a>
        </form>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
