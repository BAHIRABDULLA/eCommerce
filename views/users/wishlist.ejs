<script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

  <script>
    function removeFromWishlist(productId, i) {
            Swal.fire({
                title: 'Are you sure?',
                text: "You won't be able to revert this!",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, remove it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/wishlist/remove/${productId}`, {
                        method: 'DELETE'
                    })
                        .then(res => res.json())
                        .then((res) => {
                          
                            const productRow = document.getElementById(`row${i}`);
                           
                            productRow.remove();
                            console.log('Item removed successfully');
                            Swal.fire(
                                'Deleted!',
                                'Your item has been removed from wishlist.',
                                'success'
                            );
                           
                        })

                        .catch(error => {
                            console.error('Error removing from wishlist:', error.message);
                            Swal.fire(
                                'Error!',
                                'Failed to remove item from wishlist. Please try again later.',
                                'error'
                            );
                        });
                }
            });
        }



        /// product add to cart funcction

        function addToCart(productId){
            fetch('/addToCart',{
                method:'POST',
                headers:{
                    'Content-Type':'application/json'
                },
                body:JSON.stringify({productId,quantity:1})
            })
            .then(response=>response.json())
            .then(data=>{
                if(data.exists){
                    Swal.fire("Product Quantity Updated!", "", "success");
                }else{
                    Swal.fire("Product Added to Cart!", "", "success");
                }
            })
            .catch(error=>{
                Swal.fire("Error", "Failed to add product to cart", "error");
                console.error('Error adding product to cart:',error);
            })
        }
    
  </script>
    

